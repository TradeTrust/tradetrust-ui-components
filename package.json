{
  "name": "@govtechsg/tradetrust-ui-components",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": [
    "*.css"
  ],
  "main": "build/index.js",
  "types": "build/esm/index.d.ts",
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@govtechsg/address-identity-resolver": "^1.3.0",
    "debug": "^4.1.1",
    "polished": "^4.0.3",
    "react-feather": "^2.0.8",
    "tailwindcss": "^1.9.6",
    "twin.macro": "^1.11.1",
    "validator": "^13.1.17"
  },
  "scripts": {
    "build": "NODE_ENV=production CI=false && npm-run-all -s build:css build:js build:type",
    "build:css": "postcss src/tailwind.css -o src/index.css",
    "build:js": "webpack --mode production",
    "build:type": "tsc --module es6 --declaration --emitDeclarationOnly --outDir build/esm",
    "start": "npm-run-all -p start:css storybook",
    "start:css": "postcss src/tailwind.css -o src/index.css --watch",
    "precommit": "npm-run-all -s lint lint:type test build",
    "commit": "git-cz",
    "commit:retry": "npm run commit -- --retry",
    "lint": "eslint . --ext .ts,.tsx,.mdx --max-warnings 0",
    "lint:type": "npx --no-install tsc --noEmit --sourceMap false",
    "lint:fix": "npm run lint -- --fix",
    "semantic-release": "semantic-release",
    "storybook": "sleep 2 &&  start-storybook -p 9009",
    "storybook:build": "build-storybook -o docs",
    "test": "jest --ci",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/prompt": "^11.0.0",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@ls-age/commitlint-circle": "1.0.0",
    "@storybook/addon-actions": "6.0.27",
    "@storybook/addon-docs": "6.0.27",
    "@storybook/addon-knobs": "^6.0.27",
    "@storybook/addon-links": "^6.0.27",
    "@storybook/addons": "6.0.27",
    "@storybook/react": "6.0.27",
    "@testing-library/react": "^11.1.0",
    "@types/debug": "4.1.5",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.14.5",
    "@types/react": "^16.9.34",
    "@types/react-transition-group": "^4.4.0",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-jest": "^26.6.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-macros": "^2.8.0",
    "commitizen": "^4.0.4",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-mdx": "^1.6.9",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "git-cz": "^4.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.4",
    "postcss-cli": "^8.1.0",
    "postcss-loader": "^4.0.4",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.13.1",
    "semantic-release": "^17.0.7",
    "typescript": "^4.0.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "license": "Apache-2.0",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript",
      "@babel/preset-react",
      "@emotion/babel-preset-css-prop"
    ],
    "plugins": [
      "@babel/plugin-proposal-nullish-coalescing-operator",
      "@babel/plugin-proposal-optional-chaining",
      "@babel/plugin-proposal-class-properties",
      "macros"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Opera versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 1 Safari version",
    "IE >= 11"
  ],
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:jest/all",
      "plugin:prettier/recommended",
      "plugin:mdx/recommended",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "plugins": [
      "react-hooks"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": true,
          "allowTypedFunctionExpressions": true
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "react/prop-types": "off",
      "react/self-closing-comp": "error",
      "jest/prefer-expect-assertions": "off",
      "array-callback-return": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "@typescript-eslint/no-empty-function": "off",
      "jest/no-hooks": "off"
    },
    "overrides": [
      {
        "files": [
          "*.md"
        ],
        "rules": {
          "prettier/prettier": [
            2,
            {
              "parser": "markdown"
            }
          ]
        }
      },
      {
        "files": [
          "*.mdx"
        ],
        "extends": [
          "plugin:mdx/overrides"
        ]
      }
    ]
  },
  "jest": {
    "coverageDirectory": "coverage",
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TradeTrust/tradetrust-ui-components.git"
  }
}
